<h1>Listing members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Twitter</th>
    <th>Twitter handle</th>
    <th>Full name</th>
    <th>Auth token</th>
    <th>Auth token secret</th>
    <th>Profile image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= member.twitter_id %></td>
    <td><%= member.twitter_handle %></td>
    <td><%= member.full_name %></td>
    <td><%= member.auth_token %></td>
    <td><%= member.auth_token_secret %></td>
    <td><%= member.profile_image_url %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

